<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Profile Type Selection Template -->
    <template id="profile_selection" name="Profile Type Selection">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_cover parallax s_parallax_is_fixed pt96 pb96" data-vcss="001" data-snippet="s_cover" data-scroll-background-ratio="1" data-name="Cover" style="background-image: url('/web/image/website.s_cover_default');">
                    <span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/website.s_cover_default'); background-position: 50% 0;"></span>
                    <div class="o_we_bg_filter bg-black-50"></div>
                    <div class="container text-center">
                        <h1 class="text-white">Welcome to Edafa Education Platform</h1>
                        <p class="lead text-white">Please select your profile type to continue</p>
                    </div>
                </section>

                <section class="s_text_block pt48 pb48" data-snippet="s_text_block">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-10">
                                <div class="row">
                                    <!-- Student Profile Card -->
                                    <div class="col-md-6 mb-4">
                                        <div class="card h-100 shadow-lg profile-card">
                                            <div class="card-body text-center p-5">
                                                <div class="profile-icon mb-4">
                                                    <i class="fa fa-graduation-cap fa-5x text-primary"></i>
                                                </div>
                                                <h2 class="card-title mb-3">Student</h2>
                                                <p class="card-text text-muted mb-4">
                                                    Apply for admission to our educational programs. 
                                                    Join thousands of students learning with us.
                                                </p>
                                                <ul class="list-unstyled text-left mb-4">
                                                    <li class="mb-2"><i class="fa fa-check-circle text-success mr-2"></i> Access to courses and programs</li>
                                                    <li class="mb-2"><i class="fa fa-check-circle text-success mr-2"></i> Student portal and resources</li>
                                                    <li class="mb-2"><i class="fa fa-check-circle text-success mr-2"></i> Track your progress</li>
                                                    <li class="mb-2"><i class="fa fa-check-circle text-success mr-2"></i> Certificates and achievements</li>
                                                </ul>
                                                <a href="/admission/apply/student" class="btn btn-primary btn-lg btn-block">
                                                    <i class="fa fa-arrow-right mr-2"></i> Apply as Student
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Trainer Profile Card -->
                                    <div class="col-md-6 mb-4">
                                        <div class="card h-100 shadow-lg profile-card">
                                            <div class="card-body text-center p-5">
                                                <div class="profile-icon mb-4">
                                                    <i class="fa fa-chalkboard-teacher fa-5x text-success"></i>
                                                </div>
                                                <h2 class="card-title mb-3">Trainer</h2>
                                                <p class="card-text text-muted mb-4">
                                                    Join our team of educators and trainers. 
                                                    Share your knowledge and expertise with students.
                                                </p>
                                                <ul class="list-unstyled text-left mb-4">
                                                    <li class="mb-2"><i class="fa fa-check-circle text-success mr-2"></i> Teach and inspire students</li>
                                                    <li class="mb-2"><i class="fa fa-check-circle text-success mr-2"></i> Flexible schedule options</li>
                                                    <li class="mb-2"><i class="fa fa-check-circle text-success mr-2"></i> Professional development</li>
                                                    <li class="mb-2"><i class="fa fa-check-circle text-success mr-2"></i> Competitive compensation</li>
                                                </ul>
                                                <a href="/admission/apply/trainer" class="btn btn-success btn-lg btn-block">
                                                    <i class="fa fa-arrow-right mr-2"></i> Apply as Trainer
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Additional Info -->
                                <div class="row mt-4">
                                    <div class="col-12">
                                        <div class="alert alert-info text-center">
                                            <i class="fa fa-info-circle mr-2"></i>
                                            <strong>Need Help?</strong> Not sure which option to choose? 
                                            <a href="/contactus" class="alert-link">Contact us</a> for guidance.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <!-- Custom CSS for Profile Cards -->
            <style>
                .profile-card {
                    transition: transform 0.3s ease, box-shadow 0.3s ease;
                    border: none;
                    border-radius: 15px;
                }
                
                .profile-card:hover {
                    transform: translateY(-10px);
                    box-shadow: 0 15px 30px rgba(0,0,0,0.2) !important;
                }
                
                .profile-icon {
                    animation: pulse 2s infinite;
                }
                
                @keyframes pulse {
                    0%, 100% {
                        transform: scale(1);
                    }
                    50% {
                        transform: scale(1.05);
                    }
                }
                
                .card-title {
                    font-weight: 700;
                    font-size: 2rem;
                }
                
                .btn-block {
                    padding: 15px;
                    font-size: 1.1rem;
                    font-weight: 600;
                    border-radius: 10px;
                    transition: all 0.3s ease;
                }
                
                .btn-block:hover {
                    transform: scale(1.05);
                }
            </style>
        </t>
    </template>

</odoo>

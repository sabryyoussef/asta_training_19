<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Trainer Recruitment Information Template -->
    <template id="trainer_recruitment_info" name="Trainer Recruitment Information">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_cover parallax s_parallax_is_fixed pt96 pb96" data-vcss="001" data-snippet="s_cover" data-scroll-background-ratio="1" data-name="Cover" style="background-image: url('/web/image/website.s_cover_default');">
                    <span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/website.s_cover_default'); background-position: 50% 0;"></span>
                    <div class="o_we_bg_filter bg-black-50"></div>
                    <div class="container text-center">
                        <h1 class="text-white">Join Our Team as a Trainer</h1>
                        <p class="lead text-white">Share your expertise and inspire the next generation</p>
                    </div>
                </section>

                <section class="s_text_block pt48 pb48" data-snippet="s_text_block">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <div class="card shadow-lg border-0">
                                    <div class="card-body p-5">
                                        <div class="text-center mb-4">
                                            <i class="fa fa-chalkboard-teacher fa-4x text-success mb-3"></i>
                                            <h2>Become a Trainer at Edafa</h2>
                                        </div>

                                        <div class="alert alert-success">
                                            <i class="fa fa-check-circle mr-2"></i>
                                            <strong>Great News!</strong> We have active recruitment opportunities for trainers.
                                        </div>

                                        <h4 class="mt-4 mb-3">Why Join Us?</h4>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex">
                                                    <i class="fa fa-check-circle text-success fa-2x mr-3"></i>
                                                    <div>
                                                        <h5>Competitive Compensation</h5>
                                                        <p class="text-muted">Attractive salary packages and benefits</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex">
                                                    <i class="fa fa-clock text-success fa-2x mr-3"></i>
                                                    <div>
                                                        <h5>Flexible Schedule</h5>
                                                        <p class="text-muted">Work-life balance options</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex">
                                                    <i class="fa fa-users text-success fa-2x mr-3"></i>
                                                    <div>
                                                        <h5>Collaborative Environment</h5>
                                                        <p class="text-muted">Work with passionate educators</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex">
                                                    <i class="fa fa-graduation-cap text-success fa-2x mr-3"></i>
                                                    <div>
                                                        <h5>Professional Development</h5>
                                                        <p class="text-muted">Continuous learning opportunities</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <h4 class="mt-4 mb-3">What We're Looking For</h4>
                                        <ul class="list-unstyled">
                                            <li class="mb-2"><i class="fa fa-chevron-right text-success mr-2"></i> Subject matter expertise in your field</li>
                                            <li class="mb-2"><i class="fa fa-chevron-right text-success mr-2"></i> Passion for teaching and mentoring</li>
                                            <li class="mb-2"><i class="fa fa-chevron-right text-success mr-2"></i> Excellent communication skills</li>
                                            <li class="mb-2"><i class="fa fa-chevron-right text-success mr-2"></i> Commitment to student success</li>
                                        </ul>

                                        <div class="text-center mt-5">
                                            <a href="/jobs" class="btn btn-success btn-lg mr-3">
                                                <i class="fa fa-briefcase mr-2"></i> View Open Positions
                                            </a>
                                            <a href="/contactus" class="btn btn-outline-secondary btn-lg">
                                                <i class="fa fa-envelope mr-2"></i> Contact HR
                                            </a>
                                        </div>

                                        <div class="mt-4 text-center">
                                            <a href="/admission/apply" class="btn btn-link">
                                                <i class="fa fa-arrow-left mr-2"></i> Back to Profile Selection
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

</odoo>

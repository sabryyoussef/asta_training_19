<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Product Category for Application Fees -->
        <record id="product_category_application_fees" model="product.category">
            <field name="name">Application Fees</field>
        </record>
        
        <!-- Application Fee Product -->
        <record id="product_application_fee" model="product.product">
            <field name="name">Application Processing Fee</field>
            <field name="type">service</field>
            <field name="lst_price">50.00</field>
            <field name="standard_price">0.00</field>
            <field name="categ_id" ref="product_category_application_fees"/>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="description">Fee for processing student admission application</field>
            <field name="sale_ok" eval="False"/>
            <field name="purchase_ok" eval="False"/>
            <field name="active" eval="True"/>
        </record>
        
        <!-- System Parameter: Default Application Fee -->
        <record id="config_default_application_fee" model="ir.config_parameter">
            <field name="key">edafa.default_application_fee</field>
            <field name="value">50.00</field>
        </record>
        
    </data>
</odoo>


<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Privilege -->
        <record id="module_category_openeducat_fees_privilege" model="res.groups.privilege">
            <field name="name">OpenEduCat Fees</field>
            <field name="sequence">8</field>
        </record>
        
        <!-- Fees User Group -->
        <record id="group_openeducat_fees_user_privilege" model="res.groups">
            <field name="name">Fees User</field>
            <field name="privilege_id" ref="module_category_openeducat_fees_privilege"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Fees Manager Group -->
        <record id="group_openeducat_fees_manager_privilege" model="res.groups">
            <field name="name">Fees Manager</field>
            <field name="privilege_id" ref="module_category_openeducat_fees_privilege"/>
            <field name="implied_ids" eval="[(4, ref('group_openeducat_fees_user_privilege'))]"/>
        </record>

        <record model="ir.module.category" id="module_category_all_op_fees">
            <field name="name">Fees</field>
            <field name="description">Helps you manage your institutes different-different users.</field>
            <field name="sequence">107</field>
            <field name="parent_id" eval="False"/>
        </record>
        <record id="module_category_openeducat_fees" model="ir.module.category">
            <field name="name">Fees</field>
            <field name="description">Helps you manage your institutes different-different users.</field>
            <field name="parent_id" ref="openeducat_fees.module_category_all_op_fees"/>
            <field name="sequence">18</field>
        </record>

        <record id="group_openeducat_fees_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids"
                   eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_op_fees_admin" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids"
                   eval="[(4, ref('group_openeducat_fees_user'))]"/>
        </record>


</odoo>

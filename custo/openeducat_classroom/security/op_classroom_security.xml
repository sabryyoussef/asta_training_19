<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Privilege -->
        <record id="module_category_openeducat_classroom_privilege" model="res.groups.privilege">
            <field name="name">OpenEduCat Classroom</field>
            <field name="sequence">8</field>
        </record>
        
        <!-- Classroom User Group -->
        <record id="group_openeducat_classroom_user_privilege" model="res.groups">
            <field name="name">Classroom User</field>
            <field name="privilege_id" ref="module_category_openeducat_classroom_privilege"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Classroom Manager Group -->
        <record id="group_openeducat_classroom_manager_privilege" model="res.groups">
            <field name="name">Classroom Manager</field>
            <field name="privilege_id" ref="module_category_openeducat_classroom_privilege"/>
            <field name="implied_ids" eval="[(4, ref('group_openeducat_classroom_user_privilege'))]"/>
        </record>

        <record model="ir.module.category" id="module_category_all_op_classroom">
            <field name="name">Classroom</field>
            <field name="description">Helps you manage your institutes different-different users.</field>
            <field name="sequence">101</field>
            <field name="parent_id" eval="False"/>
        </record>
        <record id="module_category_openeducat_classroom" model="ir.module.category">
            <field name="name">Classroom</field>
            <field name="description">Helps you manage your institutes different-different users.</field>
            <field name="parent_id" ref="openeducat_classroom.module_category_all_op_classroom"/>
            <field name="sequence">1</field>
        </record>

        <record id="group_op_classroom_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids"
                   eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_op_classroom_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids"
                   eval="[(4, ref('openeducat_classroom.group_op_classroom_user'))]"/>
        </record>

</odoo>
